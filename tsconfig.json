{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/assets/*": ["assets/*"],
      "@/utils/*": ["utils/*"],
      "@/constants/*": ["constants/*"],
      "@/services/*": ["services/*"],
      "@/contexts/*": ["contexts/*"],
      "@/pages/*": ["pages/*"],
      "@/models/*": ["models/*"],
      "@/hooks/*": ["hooks/*"],
      "@/display/*": ["display/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
